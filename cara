<body>

<h2>6-Digit Calculator</h2>

<!-- Input -->
<input type="text" id="codeInput" maxlength="6" placeholder="Enter 6 digits" />

<!-- Display boxes -->
<div class="digit-boxes">
  <div class="digit-box" id="box0"></div>
  <div class="digit-box" id="box1"></div>
  <div class="digit-box" id="box2"></div>
  <div class="digit-box" id="box3"></div>
  <div class="digit-box" id="box4"></div>
  <div class="digit-box" id="box5"></div>
</div>

<!-- Calculate button -->
<button onclick="calculate()">Calculate</button>

<!-- Result -->
<div id="result-box"></div>

<script>
const input = document.getElementById('codeInput');
const boxes = [];
for (let i = 0; i < 6; i++) {
  boxes.push(document.getElementById('box' + i));
}

// Update digit boxes as user types
input.addEventListener('input', () => {
  let val = input.value.replace(/[^0-9]/g,''); // numbers only
  input.value = val;
  for (let i = 0; i < 6; i++) {
    boxes[i].textContent = val[i] || '';
  }
});

// Calculate function
function calculate() {
  let val = input.value;
  if (val.length !== 6) {
    alert('Please enter 6 digits');
    return;
  }
  let digits = val.split('').map(Number);
  let result = (digits[0] * digits[1]) + digits[3] + digits[4];
  document.getElementById('result-box').textContent = result;
}
</script>

